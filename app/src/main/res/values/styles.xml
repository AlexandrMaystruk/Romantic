<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="coordinatorLayoutStyle">@style/AppTheme.NoActionBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/start_activity</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="TextBottomNavigation">
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:textColor">@color/text_white_unselected</item>
    </style>

    <style name="TextXS">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="TextS">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="ButtonS">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:textColor">@color/color_white</item>
    </style>


    <style name="HeaderTextFont" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/konkord_retro</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/color_white</item>

    </style>


</resources>
